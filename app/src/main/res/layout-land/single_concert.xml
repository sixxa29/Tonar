<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="#D6D7D7"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal|center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:clickable="true"
            android:id="@+id/backButton"
            android:layout_gravity="left"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:foregroundGravity="top"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TonleikarImageView"

            />

        <TextView
            android:id="@+id/ConcertName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#010101"
            android:textSize="20sp"
            android:text="@string/concert_title"
            style="@style/AlertDialog.AppCompat"
            android:foregroundGravity="top"
            android:fontFamily="sans-serif-light"
            />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >



            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/eventAddButton"
                android:src="@drawable/calplus"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right" />

            <TextView
                android:id="@+id/ConcertLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#020202"
                android:textSize="15sp"
                android:text="@string/concert_location"
                style="@style/AlertDialog.AppCompat"
                android:layout_alignParentLeft="true"
                android:fontFamily="sans-serif-light"
                />

            <TextView
                android:id="@+id/ConcertDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#020202"
                android:textSize="15sp"
                android:text="@string/concert_date"
                style="@style/AlertDialog.AppCompat"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-light"
                />

            <TextView
                android:id="@+id/ConcertTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#020202"
                android:textSize="15sp"
                android:text="@string/concert_time"
                style="@style/AlertDialog.AppCompat"
                android:layout_marginTop="50dp"
                android:fontFamily="sans-serif-light"
                />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>