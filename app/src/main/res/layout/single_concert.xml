<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:background="#575757"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/TonleikarImageView"
        android:src="@drawable/tonar" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eventAddButton"
        android:clickable="true"
        android:src="@drawable/evadd" />

    <TextView
        android:id="@+id/TonleikarTextview"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:textColor="#010101"
        android:textSize="30dp"
        android:text="Tonleikar"
        style="@style/AlertDialog.AppCompat"
        android:foregroundGravity="top"
        android:layout_below="@+id/textViewItem2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="107dp"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/dagsetningTextView"
        android:layout_width="fill_parent"
        android:layout_height="116dp"
        android:textColor="#020202"
        android:textSize="20dp"
        android:text="Dagsetning"
        style="@style/AlertDialog.AppCompat"
        android:foregroundGravity="top"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="71dp" />

</LinearLayout>
